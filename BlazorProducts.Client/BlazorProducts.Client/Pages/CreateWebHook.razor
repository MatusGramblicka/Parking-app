@page "/createWebhook"

<h2>Create Webhook</h2>

<EditForm EditContext="_editContext" OnValidSubmit="Create" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label for="webHookUri" class="col-md-2 col-form-label">WebHookUri:</label>
        <div class="col-md-10">
            <InputText id="webHookUri" class="form-control" @bind-Value="_webhook.WebHookUri" />
            <ValidationMessage For="@(() => _webhook.WebHookUri)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="signingSecret" class="col-md-2 col-form-label">SigningSecret:</label>
        <div class="col-md-10">
            <InputText id="signingSecret" class="form-control" @bind-Value="_webhook.SigningSecret" />
            <ValidationMessage For="@(() => _webhook.SigningSecret)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="signatureHeaderName" class="col-md-2 col-form-label">SignatureHeaderName:</label>
        <div class="col-md-10">
            <InputText id="signatureHeaderName" class="form-control" @bind-Value="_webhook.SignatureHeaderName" />
            <ValidationMessage For="@(() => _webhook.SignatureHeaderName)" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success"
                    disabled="@formInvalid">
                Create
            </button>
        </div>
    </div>
</EditForm>
<br />
<div class="row">
    <div class="col">
        <a href="/webhooks" class="btn btn-success">Back</a>
    </div>
</div>